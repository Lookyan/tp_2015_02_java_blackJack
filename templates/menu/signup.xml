<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="menu">
        <form>
            <!--<span class="signup__hint">Only letters, digits, dash and underscore</span>-->
            <input class="menu__item menu__item_textbox" type="text" placeholder="Name" name="name" required="required"
                   pattern="^[a-zA-Z0-9_-]+$"/>
            <input class="menu__item menu__item_textbox" type="email" placeholder="E-mail" name="email"
                   required="required"/>
            <input class="menu__item menu__item_textbox" type="password" placeholder="Password" name="password"
                   required="required"/>
            <input class="menu__item menu__item_button" id="signup__submit" type="submit" value="Sign up"
                   name="submit"/>
            <a href="/#" class="menu__item menu__item_button menu__item_button_back">Back</a>
        </form>
    </div>
</fest:template>